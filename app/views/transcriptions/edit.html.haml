.row
    %h1= @transcription.song.title
    %h2 Edit Transcription

    = form_for @transcription, { :action => "update" } do |f|
        = f.label :level
        %br
        = f.text_field :level

        = f.label :key
        %br
        = f.text_field :key

        = f.label :lyrics
        %br
        = f.text_area :lyrics

        = label_tag 'video', 'Paste the part after the "watch?"" part of your YouTube Link'
        %br
        = f.text_field :video

        = f.label :comment
        %br
        = f.text_area :comment

        = f.hidden_field :song_id, :value => params[:song_id]

        = f.submit :class => 'button'
